{
  "comments": {
    "lineComment": { "comment": "//" },
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*@(section|if|elif|else|each|\\w+)\\b.*$",
    "decreaseIndentPattern": "^\\s*@end\\b.*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*@(section|if|each|\\w+)\\b",
      "end": "^\\s*@end\\b"
    }
  }
}
